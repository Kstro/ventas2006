
{% block javascripts %}            
    <script src="{{ asset('bundles/hnrsircim/js/Modulos/administracion/area/new_edit.js') }}" type="text/javascript"></script>        
{% endblock %}  


{% block body -%}
    <div id="titulo_barra">
        Editar área
        
    </div>
    <br><br>
    <form action="{{ path('area_update', { 'id': entity.id,'login':login }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" /> 
        <table id="tbl_area" class="tbl_nuevo" align="center">
            <tr>
                <td colspan="2">
                    <div id="titulo" name="{{ entity.id }}">
                        Información de área
                    </div>                
                </td>
            </tr>
            
            <tr >
                <td>
                    Nombre:
                </td>
                <td>
                    {{ form_widget(edit_form.arNombre)}}
                </td>
            </tr>    

            <tr>
                <td>
                    Descripción:
                </td>
                <td>
                    {{ form_widget(edit_form.arDescripcion)}}
                </td>
            </tr>    
            <tr>
                <td colspan="2">
                    <div id="titulo">
                        Número de cupos por área
                    </div>                
                </td>
            </tr>

            <tr>
                <td>
                    Cupos:
                </td>
                <td>
                    {{ form_widget(edit_form.arCupo)}}
                </td>
            </tr>    
            
              {{form_rest(edit_form)}}
        </table>


        <br>
        <div class="botones">
            <p>
                <button type="submit" class="guardar">Guardar</button>
                {# <a id="cancelar" class="cancelar" href"">Cancelar</a> #}
                <button id="cancelar" class="cancelar">Cancelar</button>
            </p>
        </div>
    </form>
    

{% endblock %}




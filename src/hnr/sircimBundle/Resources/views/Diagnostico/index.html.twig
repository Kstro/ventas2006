                <td>
                <ul>
                    <li>
                        <a href="{{ path('diagnostico_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('diagnostico_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('diagnostico_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

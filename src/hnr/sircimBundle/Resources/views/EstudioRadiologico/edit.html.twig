{% extends 'hnrsircimBundle::Layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
        <link rel="stylesheet" href="{{ asset('bundles/hnrsircim/css/css/default.css')}}" type="text/css">
    {% endblock %}

{% block javascripts %}            
    {{ parent() }}
        <script src="{{ asset('bundles/hnrsircim/js/placas.js') }}" type="text/javascript"></script>
        <script type="text/javascript" src="{{ asset('bundles/hnrsircim/js/zebra_datepicker.js') }}"></script>

{% endblock %}  



{% block body -%}
    <h1>EstudioRadiologico creation</h1>

    <form action="{{ path('estudioradiologico_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.erEdadPaciente) }}
        {{ form_row(edit_form.idempleado) }}
        {{ form_row(edit_form.idSolicitud) }}
        
        <ul class="placas" data-prototype="{{ form_widget(edit_form.placas.vars.prototype)|e }}">
            {{ form_rest(edit_form) }}
        </ul>
        <p>
            <button type="submit">Edit</button>
        </p>

        <div id="container"></div>

    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('estudioradiologico') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}


{% block script%}
<script type="text/javascript">


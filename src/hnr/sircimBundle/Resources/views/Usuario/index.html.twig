{% extends 'hnrsircimBundle::Layout.html.twig' %}



{% block lista_modulos %}
    {% for modulo in modulos %}
        <li><a href="{{path(modulo.osURL,{'login':usuario.usLogin})}}">{{modulo}}</a></li>
    {% endfor %}
{% endblock %}


{% block javascripts %}            
    {{ parent() }}
    
    <script src="{{ asset('bundles/hnrsircim/js/Modulos/administracion/usuario/index.js') }}" type="text/javascript"></script>
        
{% endblock %}  

{% block configuracion %}
    
    <a id="conf_cuenta" href="{{ path('usuario_cuenta', { 'login':login,'opc':'0' }) }}">Configuración de cuenta</a>

{% endblock %}


{% block nombre_usr %}
    <label id="{{ usuario.usLogin }}">
        {{ usuario.usLogin }}
    </label> 
{% endblock %} 

{% block mod_activo %} 
    
    Administración

{% endblock %} 

{% block gestion_modulo %} 
    
    Gestión de usuarios

{% endblock %} 
    

{% block botones_modulo %}
    <div class="menu_grupo">
        {# <button id="buscar" class="btn btn_destacado"></button> #}
        <button href="{{ path('usuario_new',{'login':login}) }}" id="nuevo" class="btn btn_destacado"></button>
    </div>
{% endblock %}


{% block emergente %}
    <div id="deshabilitar"></div>
    <div id="popup_box"></div>
{% endblock %}


{% block body -%}
    {# <h1>Usuario list</h1> #}
    <br><br>




<div id="listado2">
    <table class="listados">
        <thead>
            <tr>            
                <th>No.</th>
                <th>Nombre</th> 
                <th>Activo/Inactivo</th>
                <th>Desbloqueado/Bloqueado</th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
            
        {% for key, empleado in empleados %}
            <tr>
                <td>{{key+1 }}</td>
                <td>
                    {{empleado.Nombre}}
                </td>
                <td>
                    <div class="slideThree">   
                        <input type="checkbox" {% if empleado.objeto.usEstadoActivo == 1%} checked {% endif %} id="activo{{empleado.objeto.id}}" name="{{empleado.objeto.id}}" nombre="{{empleado.Nombre}}" />
                        <label for="activo{{empleado.objeto.id}}"></label>
                    </div>


                    {# {{ entity.usEstadoActivo }} #}</td>
                <td>
                    <div class="slideThree">   
                        <input type="checkbox" {% if empleado.objeto.usEstadoBloqueado == 1%} checked {% endif %} id="bloqueo{{empleado.objeto.id}}" name="{{empleado.objeto.id}}" nombre="{{empleado.Nombre}}"/>
                        <label for="bloqueo{{empleado.objeto.id}}"></label>
                    </div>
                    {# {{ entity.usEstadoBloqueado }} #}
                </td>
                <td>
                    <a class="acciones" href="{{ path('usuario_edit', { 'id': empleado.objeto.id,'login':login,'opc':'1' }) }}">
                        <img src="{{ asset('bundles/hnrsircim/img/edit.png')}}">
                    </a>
                    <a class="acciones mostrar_info_user" href="{{ path('usuario_show', { 'id': empleado.objeto.id,'login':login }) }}">
                        <img src="{{ asset('bundles/hnrsircim/img/detalle.png')}}">
                    </a>
                </td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>        
<br><br>
    

    {% endblock %}

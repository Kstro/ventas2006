{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Bitacora list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Biaccion</th>
                <th>Bifecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bitacora_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.biAccion }}</td>
                <td>{% if entity.biFecha %}{{ entity.biFecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bitacora_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bitacora_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bitacora_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

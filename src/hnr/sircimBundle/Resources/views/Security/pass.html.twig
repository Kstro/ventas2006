{% block javascripts %}            
    {{parent()}}
    
    <script src="{{ asset('bundles/hnrsircim/js/Modulos/cambiarpass/cambiarpass.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/hnrsircim/js/mensajes/mensajes.js') }}" type="text/javascript"></script>
        
{% endblock %}  


{% block body %}


<form action="{{ path('continuar_sistema',{'login':login}) }}" method="post">


    <div id="login">
            <div id="header">
                <label id="{{login}}">
                    Modificar contraseña
                </label>
            </div>
            <div id="content">
                <div id="nuevo_password">
                    <table>
                        <tr>
                            <td>
                                <label>Nueva contraseña:</label>
                            </td>
                            <td>
                                <input type="password" name="pass1" id="pass1" class="textos">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Confirmar contraseña:</label>
                            </td>
                            <td>
                                <input type="password" name="_username" id="pass2" class="textos">
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div id="footer">
                <button class="guardar" type="submit">Continuar</button>
            </div>        
    </div>

</form>

{% endblock %}


{% block body %}



<div id="login">

<form action="{{ path('login_check') }}" method="post">
    
        <div id="header">
            <label>
                Iniciar sesión
            </label>

        </div>
        <div id="content">
            <div>
                
                <div id="username">
                    
                    <input type="text" id="login_input" name="_username" value="{# {{ last_username }} #}" />
                </div>
                <div id="password">
                    
                    <input type="password" id="pass" name="_password" />
                </div>
                
            
                
                    <div id="error_login">
                        <label>
                            {% if error %}
                                {{error}}
                            {% endif %} 
                        </label>
                    </div>
                
            </div>
            

        </div>
        <div id="footer">
            <button class="guardar" type="submit">Iniciar sesión</button>

        </div>
        
  
</form>
  </div>
{% endblock %}

{% block script %}
    
    <script type="text/javascript">

    jQuery(document).ready(function($) {

            if($('#login_input').val().length == 0)
            {
                $('#login_input').val("Login");
            }

            if($('#pass').val().length == 0)
            {
                $('#pass').val("Contraseña");
            }

            $('#login_input, #pass').click(function(event) {
                /* Act on the event */
                if($(this).val() == 'Login')
                {
                    $(this).val("");       
                }

                if($(this).val() == 'Contraseña')
                {
                    $(this).val("");       
    
                
                }
                
                
            });

        

            $('#login_input,#pass').focusout(function(event) {
                /* Act on the event */
                if($('#login_input').val().length == 0)
                {
                    $('#login_input').val("Login");       

                } 
                if($('#pass').val().length == 0)
                {
                    
                    $('#pass').val("Contraseña");
                }
            });
            

    
    });
    






    </script>

{% endblock %}
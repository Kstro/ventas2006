    <div id="cal_next">
        {% block gestion_modulo %} {% endblock %} 
    </div>

    </div>
    <ul id="lista_modulos">
        {# Bloque para listado de modulos accesibles #}
        {% block lista_modulos %}
            <li><a href="">Registro de estudios</a></li>
            <li><a href="">Administraci&oacute;n</a></li>
            <li><a href="">Transcripci&oacute;n</a></li>
        {% endblock %}
    </ul>
</nav>

<div id="area_trabajo">
    {# Bloque para area de trabajo de cada modulo #}
    {% block body %} {% endblock %}
</div>

<footer>
	Derechos reservados 2014 &copy; &middot;
	<a id="info_sircim" href="#">Acerca de SIRCIM</a>
</footer>



<!DOCTYPE html>
<html>
<head>
    <title>{% block titulo %}SIRCIM{% endblock %}</title>
    <meta charset="UTF-8">
    {# Bloque para hojas de estilo #}
    {% block stylesheets %}
        <link href="{{ asset('bundles/hnrsircim/css/styles.css') }}" rel="stylesheet" type="text/css"/>

    {% endblock %}
    
    {# Bloque para javascript #}    
    {% block javascripts %}            
        <script src="{{ asset('bundles/hnrsircim/js/jquery-1.10.2.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/hnrsircim/js/layout.js') }}" type="text/javascript"></script>
        
        <script src="{{ asset('bundles/hnrsircim/css/alertify/lib/alertify.min.js') }}" type="text/javascript"></script> 
        <script src="{{ asset('bundles/hnrsircim/js/Modulos/info/info_sircim.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        
    {% endblock %}  
                
</head>

<body>
	
<header>
    <div id="header_container">
        <h1><a title="SIRCIM" href="/">SIRCIM</a></h1>
	
    </div>
</header>


<div id="area_trabajo">
    {# Bloque para area de trabajo de cada modulo #}
    {% block body %} {% endblock %}
    
{% block content %}


{% endblock %}
</div>

<footer>
	Derechos reservados 2014 &copy; &middot;
	<a id="info_sircim" href="#">Acerca de SIRCIM</a>
</footer>
<div id="popup_box_bitacora">
</div>
<div id="popup_box_info">
</div>
<div id="deshabilitar">
</div>
{% block script %}


{% endblock %}

</body>
</html>
